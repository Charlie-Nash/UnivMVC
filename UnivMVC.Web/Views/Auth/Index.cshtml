@model UnivMVC.Domain.Auth.LoginRequest

<h2>Login</h2>

<form asp-action="Index" method="post">
    <label class="mt-1">Usuario:</label><br />    
    <input asp-for="Usuario" type="text" /><br />

    <label class="mt-1">Contraseña:</label><br />    
    <input asp-for="Pwd" type="password" /><br />

    <input type="submit" value="Ingresar" class="btn btn-success mt-2" />
</form>

<br />

@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}

@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}